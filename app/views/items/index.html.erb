<h1>This is the Item lists</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Item Name</th>
            <th scope="col">Item Description</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
            <tr>
                <th scope="row"><%= item.id %></th>
                <td><%= item.name%></td>
                <td><%= item.description %></td>
                <td><%= item.price %></td>
            <tr>
        <% end %>
    </tbody>
</table>
